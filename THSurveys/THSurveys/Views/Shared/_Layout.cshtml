<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("TH Surveys", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav id="cssmenu">
                        <ul>
                            <li  id="home">@Html.ActionLink("Home", "Index", "Home")</li>
                            <li class="has-sub">@Html.ActionLink("Participation", "Index", "Home")
                                <ul>
                                    <li>@Html.ActionLink("Top 5 Surveys","Index","Home")</li>
                                    <li>@Html.ActionLink("Choose by Category", "Choose", "Home")</li>
                                </ul>
                            </li>
                            <li class="has-sub">@Html.ActionLink("Surveys","List","Survey")
                                <ul>
                                    <li>@Html.ActionLink("List my Surveys", "List", "Survey")</li>
                                    <li>@Html.ActionLink("Create", "Create", "Survey")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Administration","Approve","Survey")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - THSurveys</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
